# OpenAI API Key for species identification
OPENAI_API_KEY=sk-your-openai-api-key-here

# Base URL for the application (used for callbacks and notifications)
BASE_URL=http://localhost:5000

# Map tile URL (optional, defaults to OpenStreetMap)
MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Database configuration (if using PostgreSQL instead of SQLite)
DATABASE_URL=postgresql://user:password@localhost:5432/arborization

# Object Storage Configuration (for Replit deployment)
PUBLIC_OBJECT_SEARCH_PATHS=/bucket-name/public
PRIVATE_OBJECT_DIR=/bucket-name/private

# Server configuration
PORT=5000
NODE_ENV=development

# Nominatim configuration (for reverse geocoding)
NOMINATIM_URL=https://nominatim.openstreetmap.org

# Maximum file upload size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed image formats for upload
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg
